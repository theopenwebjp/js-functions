{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": [
      "DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"
    ],
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*.js",
    "../src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "**/dist/*"
  ],
  "resolveJsonModule": true,
}