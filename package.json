{
    "name": "@theopenweb/js-functions",
    "type": "module",
    "version": "1.1.0",
    "description": "Set of general/common utility functions that can be used in JavaScript. Uses es6 exports.",
    "main": "./src/index.js",
    "directories": {
        "test": "tests"
    },
    "files": [
        "declarations", "dist", "src", "package.json", "LICENSE", "readme.md"
    ],
    "scripts": {
        "test": "npm run test-treeshaking && npm run test-nyc",
        "docs": "npm run api-docs && npm run eslint",
        "test-treeshaking": "cd ./test/tests/tree-shaking && webpack --config ./webpack.config.cjs",
        "test-nyc": "nyc --reporter=html mocha ./test/tests/browser/tests/*.js --require esm -r jsdom-global/register",
        "api-docs": "typedoc --plugin typedoc-plugin-markdown --out api_docs ./src/index.js",
        "eslint": "gulp --gulpfile ./gulpfile.cjs eslint",
        "pre-commit": "npm run test && npm run eslint"
    },
    "devDependencies": {
        "@types/node": "^18.11.9",
        "browserify": "^17.0.0",
        "chai": "^4.3.7",
        "esdoc": "^1.1.0",
        "esdoc-standard-plugin": "^1.0.0",
        "eslint": "^8.27.0",
        "eslint-html-reporter": "^0.7.4",
        "esm": "^3.2.25",
        "gulp": "^4.0.2",
        "gulp-eslint": "^6.0.0",
        "hamburgers": "^1.2.1",
        "istanbul": "^0.4.5",
        "jquery": "^3.6.1",
        "jsdom": "20.0.2",
        "jsdom-global": "3.0.2",
        "jsuri": "^1.3.1",
        "mocha": "^10.1.0",
        "mocha-phantomjs": "^4.1.0",
        "nyc": "^15.1.0",
        "phantomjs": "^2.1.7",
        "typedoc": "^0.23.25",
        "typedoc-plugin-markdown": "^3.14.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^4.10.0"
    },
    "keywords": [
        "functions",
        "utility",
        "es6",
        "library"
    ],
    "author": "The Open Web <noreply@theopenweb.jp> (https://theopenweb.jp)",
    "contributors": [
        "Damien Golding <noreply@damiengolding.com> (https://damiengolding.com)"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/theopenwebjp/js-functions.git"
    },
    "homepage": "https://theopenweb.info",
    "bugs": {
        "url": "https://github.com/theopenwebjp/js-functions/issues"
    },
    "private": false,
    "license": "MIT",
    "types": "./declarations/index.d.ts",
    "sideEffects": false
}
