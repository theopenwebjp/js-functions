{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "no-redeclare": "warn",
        "no-unused-vars": "warn",
        "no-var": "error",
        "no-use-before-define": ["off", {
            "variables": false
        }],
        "no-loss-of-precision": "off",
        "no-nonoctal-decimal-escape": "off",
        "no-unsafe-optional-chaining": "off",
        "no-useless-backreference": "off"
    },
    "ignorePatterns": [
        "**/*.html"
    ]
}