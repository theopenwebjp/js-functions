{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"
    ],
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./declarations",
    "declarationMap": true,
    "extendedDiagnostics": true
  },
  "include": [
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "resolveJsonModule": true,
  "moduleResolution": "node"
}